def copy_file_content(source_file, destination_file):
    # Open the source file in read mode and destination file in write mode
    with open(source_file, 'r') as src, open(destination_file, 'w') as dst:
        # Read the content from the source file and write it to the destination file
        content = src.read()
        dst.write(content)
        
    print(f"Content copied from {source_file} to {destination_file}")

# Example usage
source_file = 'source.txt'
destination_file = 'destination.txt'
